#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('prac-socket:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3001');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var io= require('socket.io').listen(server);

var rooms= {};
var roomCount= 0;

io.on('connection', function(socket) {

  socket.on('makeRoom', function(data) {
      var roomName= data;

      if(rooms[roomName]== undefined) {
        rooms[roomName]= true;
        roomCount++;
      }
   });

   socket.on('showRoom', function(){
     socket.emit('showRoom', {"rooms": rooms, "roomCount": roomCount});
   });

  socket.on('joinRoom', function(data){
    // consider room exist
    var keys= Object.keys(rooms);
    var roomExist= false;

    for(var i=0; i< roomCount; i++) {
      if(data.room== keys.shift()) roomExist= true;
    }
    
    if(roomExist== true) {
      socket.join(data.room);
      socket.room= data.room;
    }
    else
      socket.emit('noRoom');
  });

  socket.on('fromclient', function(data){
    io.sockets.in(socket.room).emit('toclient',data);
  });

  socket.on('disconnect',function(data) {

  });

});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}